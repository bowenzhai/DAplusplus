{
	"manifest_version": 2,
	
	"name": "Digital Agent++",
	"description": "Expand Digital Agent functionality.",
	"version": "1.0",
	
	"content_scripts": [
		{
			"matches": [
				"https://www1.digitalagent.ca/*",
				"https://manulife.digitalagent.ca/*",
				"https://ipc.digitalagent.ca/*",
				"https://dir.richardsongmp.com/*"
			],
			"css": ["mystyle.css"],
			"js": ["myscript.js"]
		}
	],
	
	
	"browser_action": {
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"https://*/*",
		"http://*/*",
		"tabs",
		"activeTab"
	]
}